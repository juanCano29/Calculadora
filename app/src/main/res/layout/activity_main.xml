<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#69e7bd"
     android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="40dp">

        <EditText
            android:layout_weight="2"
             android:focusable="true"
            android:enabled="false"
            android:id="@+id/pantallan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            />
    </LinearLayout>

 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
 <Button
     android:layout_weight="1"
     android:enabled="false"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:text=""/>
       <Button
           android:layout_weight="1"
           android:enabled="false"
           android:id="@+id/btneliminar"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text=""/>
     <Button
         android:layout_weight="1"
         android:id="@+id/btnlimpiar"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="C"/>

     <Button
         android:layout_weight="1"
         android:id="@+id/btndividir"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="/"/>

 </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
 <Button
     android:layout_weight="1"
     android:id="@+id/btn7"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:text="7"/>
     <Button
         android:layout_weight="1"
         android:id="@+id/btn8"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="8"/>
     <Button
         android:layout_weight="1"
         android:id="@+id/btn9"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="9"/>
     <Button
         android:layout_weight="1"
         android:id="@+id/btnmulti"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="X"/>

 </LinearLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
 <Button
     android:layout_weight="1"
     android:id="@+id/btn4"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:text="4"/>
     <Button
         android:layout_weight="1"
         android:id="@+id/btn5"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="5"/>
     <Button
         android:layout_weight="1"
         android:id="@+id/btn6"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="6"/>
     <Button
         android:layout_weight="1"
         android:id="@+id/btnrestar"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="-"/>

 </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
 <Button
     android:layout_weight="1"
     android:id="@+id/btn1"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:text="1"/>
     <Button
         android:layout_weight="1"
         android:id="@+id/btn2"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="2"/>
     <Button
         android:layout_weight="1"
         android:id="@+id/btn3"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="3"/>
     <Button
         android:layout_weight="1"
         android:id="@+id/btnsumar"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="+"/>

 </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_weight="1"
        android:enabled="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""/>

    <Button
        android:layout_weight="1"
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"/>
    <Button
        android:layout_weight="1"
        android:id="@+id/btnpunto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="."/>
        <Button
            android:layout_weight="1"
            android:id="@+id/btnigual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="="/>

</LinearLayout>

</LinearLayout>